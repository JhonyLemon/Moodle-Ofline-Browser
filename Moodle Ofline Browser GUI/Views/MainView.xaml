<UserControl x:Class="Moodle_Ofline_Browser_GUI.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Moodle_Ofline_Browser_GUI.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="755">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView 
            SelectedItem="{Binding CategoryItem}"
            ItemsSource="{Binding CategoryItems}"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Center"
            Margin="5 5 5 5"
            Padding="5"
            Grid.Column="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card
                        Margin="2 2 2 2"
                        UniformCornerRadius="5">
                        <TextBlock 
                            TextAlignment="Center"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Text="{Binding CategoryItemName}"/>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding NoDataVisibility,Mode=OneWay}"
            Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
            Grid.Column="1"
            Text="Brak danych"/>

        <ListView 
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Grid.Column="1">
            
        </ListView>

    </Grid>
</UserControl>
